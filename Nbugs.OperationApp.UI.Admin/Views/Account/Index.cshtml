@using Nbugs.OperationApp.UI.Admin.Core;
@using Nbugs.OperationApp.Models.System;

@{
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
    List<Permission> Permissions = (List<Permission>)ViewBag.Permissions;
    if (Permissions == null)
    {
        Permissions = new List<Permission>();
    }
}

<body>
    <div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
    <div class="mvctool">
        @Html.ToolButton("btnCreate", "icon-add", "新增", Permissions, "Create", "Account", true)
        @Html.ToolButton("btnEdit", "icon-edit", "编辑", Permissions, "Edit", "Account", true)
        @Html.ToolButton("btnDelete", "icon-remove", "删除", Permissions, "Delete", "Account", true)
        @Html.ToolButton("btnAllot", "icon-share", "分配角色", Permissions, "Allot", "Account", true)
        @Html.ToolButton("btnDetails", "icon-details", "详细", Permissions, "Detail", "Account", true)
        @Html.ToolButton("btnExport", "icon-export", "导出", Permissions, "Export", "Account", true)
        @Html.ToolButton("btnReload", "icon-reload", "刷新", Permissions, "Reload", "Account", true)
        @*<input id="txtQuery" type="text" class="searchText" style="margin-left:10px">
            <a id="btnQuery" style="float: left;" class="l-btn l-btn-plain">
                <span class="l-btn-left"><span class="l-btn-text icon-search" style="padding-left: 20px;">查询</span></span>
            </a>
        *@
    </div>
    <table id="List"></table>
    <script type="text/javascript">
        $(function () {
            $('#List').datagrid({
                url: '/Account/GetList',
                width: $(window).width() - 10,
                methord: 'post',
                height: $(window).height() - 35,
                fitColumns: true,
                sortName: 'Id',
                sortOrder: 'desc',
                idField: 'Id',
                pageSize: 15,
                pageList: [15, 20, 30, 40, 50],
                pagination: true,
                striped: true, //奇偶行是否区分
                singleSelect: true,//单选模式
                rownumbers: true,//行号
                columns: [[
                    { field: 'Id', title: 'ID', width: 80 },
                    { field: 'LoginName', title: '登录名', width: 80 },
                    { field: 'Name', title: '名称', width: 90 },
                    { field: 'QQ', title: 'QQ', width: 80, align: 'right' },
                    { field: 'Mobile', title: '手机号码', width: 80, align: 'right' },
                    { field: 'Email', title: 'Email', width: 150 },
                    { field: 'CreateUser', title: '创建用户', width: 80 },
                    { field: 'CreateTime', title: '创建时间', width: 80, align: 'center' }
                ]]
            });
        });
        $(function () {
            $(window).resize(function () {
                $('#List').datagrid('resize', {
                    width: $(window).width() - 10,
                    height: $(window).height() - 35
                }).datagrid('resize', {
                    width: $(window).width() - 10,
                    height: $(window).height() - 35
                });
            });

        });
        //ifram 返回
        function frameReturnByClose() {
            $("#modalwindow").window('close');
        }
        //iframe 返回并刷新
        function frameReturnByReload(flag) {
            if (flag)
                $("#List").datagrid('load');
            else
                $("#List").datagrid('reload');
        }
        //输出信息
        function frameReturnByMes(mes) {
            $.messageBox5s('提示', mes);
        }
        $(function () {
            $('#btnReload').click(function () {
                frameReturnByReload(false);
            });
            $("#btnCreate").click(function () {
                $("#modalwindow").html("<iframe width='100%' height='98%' scrolling='no' frameborder='0'' src='/Account/Create'></iframe>");
                $("#modalwindow").window({ title: '新增', width: 700, height: 400, iconCls: 'icon-add' }).window('open');
            });
            $("#btnEdit").click(function () {
                var row = $('#List').datagrid('getSelected');
                if (row != null) {
                    $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/Account/Edit/" + row.Id + "'></iframe>");
                    $("#modalwindow").window({ title: '编辑', width: 700, height: 430, iconCls: 'icon-edit' }).window('open');
                } else { $.messageBox5s('提示', '请选择要操作的记录'); }
            });
            $("#btnAllot").click(function () {
                var row = $('#List').datagrid('getSelected');
                if (row != null) {
                    $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/Account/Allot/" + row.Id + "'></iframe>");
                    $("#modalwindow").window({ title: '分配角色', width: 700, height: 430, iconCls: 'icon-edit' }).window('open');
                } else { $.messageBox5s('提示', '请选择要操作的记录'); }
            });
            $("#btnDetails").click(function () {
                var row = $('#List').datagrid('getSelected');
                if (row != null) {
                    $("#modalwindow").html("<iframe width='100%' height='98%' scrolling='no' frameborder='0' src='/Account/Details/" + row.Id + "'></iframe>");
                    $("#modalwindow").window({ title: '详细', width: 500, height: 300, iconCls: 'icon-details' }).window('open');
                } else { $.messageBox5s('提示', '请选择要操作的记录'); }
            });
            $("#btnQuery").click(function () {
                var queryStr = $("#txtQuery").val();
                //如果查询条件为空默认查询全部
                if (queryStr == null) {
                    queryStr = "%";
                }
                $('#List').datagrid({
                    url: '/Account/GetList?query=' + encodeURI(queryStr)
                });
            });
            $("#btnDelete").click(function () {
                var row = $('#List').datagrid('getSelected');
                if (row != null) {
                    $.messager.confirm('提示', '确定删除', function (r) {
                        if (r) {
                            $.post("/Account/Delete/" + row.Id, function (data) {
                                if (data.type == 1)
                                    $("#List").datagrid('load');
                                $.messageBox5s('提示', data.message);
                            }, "json");

                        }
                    });
                } else { $.messageBox5s('提示', '请选择要操作的记录'); }
            });
        });
    </script>
</body>