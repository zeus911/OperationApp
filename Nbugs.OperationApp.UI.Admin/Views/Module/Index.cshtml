@using Nbugs.Common;
@using Nbugs.OperationApp.UI.Admin.Core;
@using Nbugs.OperationApp.Models.System;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
    List<Permission> Permissions = (List<Permission>)ViewBag.Permissions;
}
<table>
    <tr>
        <td style="vertical-align:top">
            <div class="mvctool">
                @Html.ToolButton("btnCreate", "icon-add", "新增", Permissions, "Create", "Module", true)
                @Html.ToolButton("btnEdit", "icon-edit", "编辑", Permissions, "Edit", "Module", true)
                @Html.ToolButton("btnDelete", "icon-remove", "删除", Permissions, "Delete", "Module", true)
                @Html.ToolButton("btnReload", "icon-reload", "刷新", Permissions, "Reload", "Module", true)
            </div>
            <table id="List"></table>
        </td>
        <td style="width:210px;padding-left:5px;vertical-align:top">
            <div class="mvctool">
                @Html.ToolButton("btnOptCreate", "icon-add", "新增", Permissions, "Create", "Module", true)
                @Html.ToolButton("btnOptEdit", "icon-edit", "编辑", Permissions, "Edit", "Module", true)
                @Html.ToolButton("btnOptDelete", "icon-remove", "删除", Permissions, "Delete", "Module", true)
            </div>
            <table id="OptList"></table>
        </td>
    </tr>
</table>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<script type="text/javascript">
    $(function () {
        $('#List').treegrid({
            url: '@Url.Action("GetList")',
            width: $(window).width() - 290,
            methord: 'post',
            height: $(window).height() - 40,
            fitColumns: true,
            treeField: 'Name',
            idField: 'Id',
            pagination: false,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            //rownumbers: true,//行号
            columns: [[
                { field: 'Id', title: '唯一标识', width: 120 },
                { field: 'Name', title: '名称', width: 220, sortable: true },
                { field: 'ParentId', title: '上级Id', width: 80, sortable: true },
                { field: 'Url', title: '链接地址', width: 80, sortable: true },
                { field: 'Icon', title: '图标', width: 80, sortable: true },
                { field: 'Sort', title: '排序号', width: 80, sortable: true },
                { field: 'Remark', title: '说明', width: 80, sortable: true },
                 {
                     field: 'Enable', title: '是否启用', width: 60, align: 'center', formatter: function (value) {
                         if (value) {
                             return "<img src='/Content/Images/icon/yes.png' />";
                         } else {
                             return "<img src='/Content/Images/icon/no.png' />";
                         }
                     }
                 },
                { field: 'CreateUser', title: '创建人', width: 80, sortable: true },
                { field: 'CreateTime', title: '创建时间', width: 120, sortable: true },
                {
                    field: 'IsLast', title: '是否最后一项', align: 'center', width: 100, formatter: function (value) {
                        if (value) {
                            return "是";
                        } else {
                            return "否";
                        }
                    }
                },
            ]],
            onClickRow: function (index, data) {
                var row = $('#List').treegrid('getSelected');
                if (row != null && row.IsLast) {
                    $('#OptList').datagrid({
                        url: '@Url.Action("GetOptListByModule")?id=' + row.Id
                    });
                }
            }
        });
        $('#OptList').datagrid({
            url: '@Url.Action("GetOptListByModule")',
            width: 255,
            methord: 'post',
            height: $(window).height() - 40,
            fitColumns: true,
            sortName: 'Id',
            sortOrder: 'asc',
            idField: 'Id',
            pageSize: 1000,
            pagination: false,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            //rownumbers: true,//行号
            columns: [[
                { field: 'Id', title: '', width: 80, hidden: true },
                { field: 'Name', title: '名称', width: 80, sortable: true },
                { field: 'KeyCode', title: '操作码', width: 80, sortable: true },
                { field: 'ModuleId', title: '所属模块', width: 80, sortable: true, hidden: true },
            ]]
        });
        $(window).resize(function () {
            $('#List').datagrid('resize', {
                width: $(window).width() - 255,
                height: $(window).height() - 20
            }).datagrid('resize', {
                width: $(window).width() - 255,
                height: $(window).height() - 20
            });
            $('#OptList').datagrid('resize', {
                height: $(window).height() - 20
            }).datagrid('resize', {
                height: $(window).height() - 20
            });
        });
    });
    function frameReturnByClose() {
        $("#modalwindow").window('close');
    }
    //iframe 返回并刷新
    function frameReturnByReload(flag) {
        if (flag) {
            $("#List").treegrid('load');
        }
        else {
            $("#List").treegrid('reload');
        }
    }
    function frameReturnByReloadOpt(flag) {
        if (flag)
            $("#OptList").datagrid('load');
        else
            $("#OptList").datagrid('reload');
    }
    function ReloadById(id) {
        if (id > 0)
            $('#List').treegrid('reload', id);
        else
            $('#List').treegrid('reload');
    }
    //输出信息
    function frameReturnByMes(mes) {
        $.messageBox5s('提示', mes);
    }
    $(function () {
        $('#btnReload').click(function () {
            frameReturnByReload(false);
        });
        $("#btnCreate").click(function () {
            var row = $('#List').treegrid('getSelected');
            $("#modalwindow").html("<iframe width='100%' height='98%' scrolling='no' frameborder='0'' src='/Module/Create/"
                + (row != null ? row.Id : "0") + "'></iframe>");
            $("#modalwindow").window({ title: '新增', width: 700, height: 400, iconCls: 'icon-add' }).window('open');
        });
        $("#btnEdit").click(function () {
            var row = $('#List').treegrid('getSelected');
            if (row != null) {
                $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/Module/Edit/" + row.Id + "'></iframe>");
                $("#modalwindow").window({ title: '编辑', width: 700, height: 430, iconCls: 'icon-edit' }).window('open');
            } else { $.messageBox5s('提示', '@Suggestion.PlaseChooseToOperatingRecords'); }
        });
        $('#btnDelete').click(function () {
            var row = $('#List').treegrid('getSelected');
            if (row != null) {
                $.messager.confirm('警告', '@Suggestion.YouWantToDeleteTheSelectedRecords', function (r) {
                    if (r) {
                        $.post("/Module/Delete/" + row.Id, function (data) {
                            if (data.type == 1) {
                                if ($("#List").treegrid('getParent', row.Id) == null) {
                                    $("#List").treegrid('reload');
                                }
                                else {
                                    ReloadById($("#List").treegrid('getParent', row.Id).Id);
                                }
                            }
                            $.messageBox5s('提示', data.message);
                        }, "json");

                    }
                });
            } else { $.messageBox5s('提示', '@Suggestion.PlaseChooseToOperatingRecords'); }
        });
        $("#btnOptCreate").click(function () {
            var row = $('#List').treegrid('getSelected');
            if (row != null) {
                if (row.IsLast) {
                    $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/Module/CreateOpt?moduleId=" + row.Id + "'></iframe>");
                    $("#modalwindow").window({ title: '新增操作码', width: 500, height: 330, iconCls: 'icon-edit' }).window('open');

                } else {
                    $.messageBox5s('提示', '只有最后一项的菜单才能设置操作码!');
                }

            } else { $.messageBox5s('提示', '请选择一个要赋予操作码的模块!'); }
        });
        $("#btnOptDelete").click(function () {
            var row = $('#OptList').datagrid('getSelected');
            if (row != null) {
                $.messager.confirm('提示', '您确定要删除“' + row.Name + '”？', function (r) {
                    if (r) {
                        $.post("@Url.Action("DeleteOpt")?id=" + row.Id, function (data) {
                            if (data == 1) {
                                $("#OptList").datagrid('load');
                            }
                        }, "json");

                    }
                });
            } else { $.messageBox5s('提示', '请选择一个要赋予操作码的模块!'); }
        });
        $("#btnOptEdit").click(function () {
            var row = $('#OptList').datagrid('getSelected');
            if (row != null) {

                    $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/Module/EditOpt?id=" + row.Id + "'></iframe>");
                    $("#modalwindow").window({ title: '编辑操作码', width: 500, height: 330, iconCls: 'icon-edit' }).window('open');
            } else { $.messageBox5s('提示', '请选择一个要赋予操作码的模块!'); }
        });
    });
</script>